<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboardlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@color/white"
            android:padding="@dimen/_5sdp">

            <com.example.realestate.CustomeClasses.CustomeImageview
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/housee" />

            <TextView
                android:id="@+id/title"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/tv_background"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="For Sale"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainlayout"
            android:background="@color/white"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/city_id"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="Clinton Vella Brown"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/static_rating"
                android:gravity="center_vertical"
                android:text="4.3 Reviews"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/town_id"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_id"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="Muslim Town Lahore"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/price"
                android:layout_width="@dimen/_80sdp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_id"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:text="$ 1444.00"
                android:textColor="#13D7B1"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/town_id"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/bedroomdasboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/bed"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="04" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/bathsdashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/bath"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="04 " />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/areadashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/measureunit"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="100M\u00B2" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>