<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Description">

    <androidx.viewpager.widget.ViewPager
       android:padding="@dimen/_10sdp"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:background="@drawable/viewpagerround">



    </androidx.viewpager.widget.ViewPager>

    <ScrollView
        android:layout_below="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            app:dotsColor="@color/aqua"
            app:dotsCornerRadius="8dp"
            app:dotsSize="10dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            app:selectedDotColor="#511FE4BE"
            app:progressMode="true"
            />
    <RelativeLayout
        android:layout_below="@+id/dots_indicator"
        android:id="@+id/locationlayout"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">
        <TextView
            android:id="@+id/city_id"
            android:layout_width="@dimen/_210sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Clinton Vella Brown"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.3 Reviews"
            android:drawableLeft="@drawable/rating"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:gravity="left"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_below="@+id/city_id"
            android:id="@+id/town_id"
            android:layout_width="@dimen/_210sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Muslim Town Lahore"
            android:drawableLeft="@drawable/locationmark"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:gravity="left"
            />
        <TextView
            android:layout_below="@+id/city_id"
            android:id="@+id/price"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 1444.00"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            android:gravity="left"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="@dimen/_10sdp"
        android:id="@+id/featuresrecyclerview"
        android:layout_below="@+id/locationlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/description"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/featuresrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/textblackcolor"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/tv_description_text"
            android:layout_below="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="9"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen bookLorem Ipsum is simply dummy"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"/>


    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getapointment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Get Apointment"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/button_round"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info"
            android:layout_below="@+id/getapointment"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Request Information"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/button_round"/>

    </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>