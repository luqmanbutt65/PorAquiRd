    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/connector_commentRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/fcr_tv_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <RatingBar
                    android:id="@+id/connectorrating"
                    style="?android:attr/ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1" />


                <EditText
                    android:id="@+id/et_comment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/connectorrating"
                    android:background="@drawable/roundimage"
                    android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM\n"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/fcr_et_comment_hint"
                    android:inputType="textMultiLine"
                    android:lines="7"
                    android:maxLines="7"
                    android:padding="@dimen/_10sdp"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/submit_connector_rating"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/et_comment1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/fcr_btn_submit"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>