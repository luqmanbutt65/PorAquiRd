<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp">



<TextView
    android:id="@+id/tv_loginpopup"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:text="You are not logged in to your account"
    android:layout_marginBottom="@dimen/_10sdp"
    android:textStyle="bold"
    android:textSize="@dimen/_15sdp"
    android:textColor="@color/black"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/_40sdp">

</TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="@dimen/_5sdp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_loginpopup">

    <RelativeLayout
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/_40sdp"
        android:text="cancel"
        android:layout_margin="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/add_edittext_style_black"
        >

        <TextView
            android:layout_centerInParent="true"
            android:text="Cancel"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:text="Login"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:background="@drawable/add_edittext_style_blackbtn"
        android:layout_below="@+id/tv_loginpopup">
        <TextView
            android:layout_centerInParent="true"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>