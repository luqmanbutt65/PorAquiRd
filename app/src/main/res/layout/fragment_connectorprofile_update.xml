<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE"
    tools:context=".Fragments.ConnectorProfileFragment_update">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headerlayut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/back_btn_updateprofile"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/myProfile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_toRightOf="@+id/back_btn_updateprofile"
                android:text="@string/fpu_tv_title"
                android:textColor="#171D28"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/notification"
                android:visibility="gone" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerlayut"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/imageview1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text=""
                            android:textColor="#171D28"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/imageview1"
                                android:text=""
                                android:textColor="#171D28"
                                android:textSize="15sp"
                                android:textStyle="italic" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fpu_tv_information"
                        android:textColor="#A0A3B5"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_company_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name_compantname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/add_edittext_style"
                        android:ellipsize="end"
                        android:hint="@string/fpu_et_comapny_name_hint"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_name_hint"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_id"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_id_hint"
                        android:inputType="numberSigned"
                        android:lines="1"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081" />

                    <TextView
                        android:id="@+id/tv_rnc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_rnc"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/rnc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_rnc_hint"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081" />


                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_phone_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:drawableLeft="@drawable/one"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/fpu_et_number_hint"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081" />

                    <TextView

                        android:id="@+id/tv_cell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/fpu_tv_cell_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/cell_no"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:drawableLeft="@drawable/one"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/fpu_et_cell_no_hint"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081" />


                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/fpu_tv_address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_address_hint"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLength="60"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/fpu_tv_city"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_city_hint"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/fpu_tv_sector"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/sector"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/add_edittext_style"
                        android:hint="@string/fpu_et_sector_hint"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#808081"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fpu_tv_agent_data"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_uploadfile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:background="@drawable/add_edittext_style_gray"
                            android:editable="false"
                            android:ellipsize="end"
                            android:hint="@string/fpu_et_data_hint"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/uploadfile"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_round"
                            android:gravity="center"
                            android:text="@string/fpu_tv_upload_file"
                            android:textAlignment="center"
                            android:textSize="@dimen/_8sdp" />


                        <ImageView
                            android:id="@+id/iv_uploadimage"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:background="@drawable/roundimage"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/uploadimage"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_round"
                            android:gravity="center"
                            android:text="@string/fpu_btn_upload_image"
                            android:textAlignment="center"
                            android:textSize="@dimen/_8sdp" />

                        <ImageView
                            android:id="@+id/iv_uplophotoid"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:background="@drawable/roundimage"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/uploadphotoid"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_round"
                            android:gravity="center"
                            android:text="@string/fpu_btn_upload_photoid"
                            android:textAlignment="center"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/getapointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/SubmitBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/button_round"
                            android:text="@string/fpu_btn_submit"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>


</FrameLayout>