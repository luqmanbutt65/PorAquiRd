<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameprofile"
    android:background="#F8F9FE"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/headerlayut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/back_btn_profile"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/myProfile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_toRightOf="@+id/back_btn_profile"
                android:text="My Profile"
                android:textColor="#171D28"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/notification" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/headerlayut"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView

                        android:id="@+id/userImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/imageview1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="Kerim jone"
                            android:textColor="#171D28"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/useremail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/imageview1"
                                android:text="karam_635@gmail.com"
                                android:textColor="#171D28"
                                android:textSize="15sp"
                                android:textStyle="italic" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_215sdp"
                    android:layout_below="@id/linearLayout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Account settings"
                        android:textColor="#ABAEBE"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />


                        <TextView
                            android:id="@+id/editprofile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Edit Profile"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />




                        <TextView
                            android:id="@+id/changepassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Change password"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />





                        <TextView
                            android:id="@+id/myprojects"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="My Projects"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Notifications"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:checked="true" />

                    </RelativeLayout>




                        <Spinner
                            android:id="@+id/language"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Default Language"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />




                        <Spinner
                            android:id="@+id/cruncy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Default Currency"
                            android:textColor="#636771"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>



    </RelativeLayout>


</FrameLayout>