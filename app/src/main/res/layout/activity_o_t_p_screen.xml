<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrount_otp"
    tools:context=".Registration.OTPScreen">


    <RelativeLayout
        android:id="@+id/headerlayut"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/back_btn"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_forgotpassword"
        android:layout_below="@+id/headerlayut"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>
    <RelativeLayout
        android:layout_below="@+id/iv_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_forgotpass"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Forgot Your Password"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"/>


        <TextView
            android:layout_below="@+id/tv_forgotpass"
            android:id="@+id/forgotpaas_description"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textColor="#737373"
            android:text="Enter The Regestration Email And We Will Send You A Confirmation Coden To Reset Your Password"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:textStyle="normal"/>




        <LinearLayout
            android:id="@+id/edittextlayout"
            android:layout_below="@+id/forgotpaas_description"
            android:weightSum="8"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/otpcircle"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/otpcircle"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"

                android:layout_weight="2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/otpcircle"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/otpcircle"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>




        <TextView
            android:layout_below="@+id/edittextlayout"
            android:id="@+id/tv_otpconfirmation"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did't Receive The Code?"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#141A25"/>
        <TextView
            android:id="@+id/resend_otp"
           android:layout_below="@id/tv_otpconfirmation"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Re-Send Code"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:textColor="#04C3FF"/>

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="#04C3FF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/resend_otp"/>

        <Button
            android:id="@+id/continuebtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/v1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/button_round"
            android:text="Continue"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            />
    </RelativeLayout>


</RelativeLayout>