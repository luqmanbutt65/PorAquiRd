<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Apointments_Tab">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIndicatorColor="@color/design_default_color_primary"
        app:tabMode="fixed"
        app:tabTextColor="#000000">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/yourappointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Appointments" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/othersappointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other's Appointments" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/appointment_Frame"
        android:layout_below="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>