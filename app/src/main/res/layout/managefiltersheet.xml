<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F9FE"
    android:orientation="vertical"
    tools:context=".BottomSheets.BottomSheet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/headerlayut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Manage Filters"
            android:textColor="#3B4160"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerlayut"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Search For"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/togglegroup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@id/detailtext"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:checkedButton="@+id/forrent1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/forrent1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="For rent"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/forsale1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="For Sale"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Select Type"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="#F0F3FF"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">

                        <Spinner
                            android:id="@+id/spinertype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Location"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/headerlayut"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="#F0F3FF"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:text="Lahore,Pakistan"
                            android:textColor="#525872"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Budget"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/minimumprice"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:hint="Minimum"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/maximumprice"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:hint="Maximum"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="Bedrooms"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/headerlayut"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="#F0F3FF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/anyButton"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonround"
                                android:gravity="center"
                                android:text="Any"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/oneBedroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="1+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/twoBedrrom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="2+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/threeBedroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="3+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/fourBedroomRoom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="4+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/enterBedroom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheetrightround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="Enter"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Bathrooms"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/headerlayut"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="#F0F3FF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bathroomAny"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="Any"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/oneBathroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="1+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/twoBathroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="2+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/threeBathroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="3+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/fourBathroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="4+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/enterBathroom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheetrightround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="Enter"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="OnClick" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Pet Room"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/petrooms"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/roundedit"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="Pet rooms"

                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />


                        <CheckBox
                            android:id="@+id/newproperty"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="New Property" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="parking Lot"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/parkings"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/roundedit"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="Parking Lot"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />


                        <CheckBox
                            android:id="@+id/usedproperty"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Used Property" />

                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/getapointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnApplyFilter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/button_round"
                        android:text="Apply Filters"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</FrameLayout>