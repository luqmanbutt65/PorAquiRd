<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F9FE"
    android:orientation="vertical"
    tools:context=".BottomSheets.BottomSheet">

    <RelativeLayout
        android:id="@+id/rl_mapLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:cardBackgroundColor="@color/aqua">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:id="@+id/auto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/roundimage"
                    android:drawableRight="@drawable/search"
                    android:drawablePadding="20dp"
                    android:hint="Enter Location"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:singleLine="true" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dataLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_filter"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/headerlayut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/mfs_tv_title"
            android:textColor="#3B4160"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerlayut"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/mfs_tv_search_for"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/togglegroup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_below="@id/detailtext"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:checkedButton="@+id/forrent1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/forrent1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/mfs_rb_for_rent"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/forsale1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/mfs_rb_for_sale"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/mfs_tv_select_type"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="#F0F3FF"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">

                        <Spinner
                            android:id="@+id/spinertype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/mfs_location"
                    android:textColor="@color/textblackcolor"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/locationlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/headerlayut"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardBackgroundColor="#F0F3FF"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/property_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/locationn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:editable="false"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="@string/mfs_et_location_hint"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textColor="#525872"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:singleLine="true"
                    android:text="@string/mfs_tv_city"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <Spinner
                        android:id="@+id/filter_city_spiner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mfs_tv_budget"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/minimumprice"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:hint="@string/mfs_et_minimum_hint"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/maximumprice"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:hint="@string/mfs_et_maximum_hint"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mfs_tv_area_size"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/minimumarea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:drawableRight="@drawable/meter"
                            android:gravity="center"
                            android:hint="@string/mfs_et2_minimum_hint"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/maximumarea"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/add_edittext_style"
                            android:digits="0123456789"
                            android:drawableRight="@drawable/meter"
                            android:gravity="center"
                            android:hint="@string/mfs_et2_maximum_hint"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:text="@string/mfs_tv_bedrooms"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/headerlayut"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="#F0F3FF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/anyButton"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonround"
                                android:gravity="center"
                                android:text="@string/mfs_btn_any"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/oneBedroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="1+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/twoBedrrom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="2+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/threeBedroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="3+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/fourBedroomRoom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="4+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/enterBedroom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheetrightround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="@string/mfs_btn_enter"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mfs_tv_bathrooms"
                        android:textColor="@color/textblackcolor"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/headerlayut"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="#F0F3FF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bathroomAny"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="@string/mfs_btn_any"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/oneBathroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="1+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/twoBathroom"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="2+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/threeBathroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="3+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/fourBathroom"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheet"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="4+"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/enterBathroom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonbottomsheetrightround"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="@string/mfs_btn_enter"
                                android:textColor="@color/textblackcolor"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="OnClick" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/petrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/mfs_tv_pet_room"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/parkings"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:text="@string/mfs_tv_parking_lot"
                            android:textColor="@color/black" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <CheckBox
                        android:id="@+id/usedproperty1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/mfs_cb_used" />

                    <CheckBox
                        android:id="@+id/newproperty1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/mfs_cb_new" />

                    <CheckBox
                        android:id="@+id/newproject1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/mfs_cb_new_project" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/getapointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnApplyFilter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/button_round"
                        android:text="@string/mfs_btn_apply_filters"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</FrameLayout>