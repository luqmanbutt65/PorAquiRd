<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrount_otp"
    tools:context=".Registration.forgotpassword">

    <RelativeLayout
        android:id="@+id/headerlayut"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/back_btn"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Forgot Password"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_forgotpassword"
        android:layout_below="@+id/headerlayut"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/forgotpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>
    <RelativeLayout
        android:layout_below="@+id/iv_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_forgotpass"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Forgot Your Password"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
           />


        <TextView
            android:layout_below="@+id/tv_forgotpass"
            android:id="@+id/forgotpaas_description"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="Enter The Regestration Email And We Will Send You A Confirmation Coden To Reset Your Password"
            android:textSize="@dimen/_15sdp"
            android:textColor="#737373"
            android:gravity="center"
            android:textStyle="normal"/>



        <TextView
            android:layout_below="@+id/forgotpaas_description"
            android:id="@+id/tv_email"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/et_emailedittext"
            android:layout_below="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/et_round"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:hint="Enter your regester email"
            android:textColorHint="#737373"
            android:paddingLeft="@dimen/_10sdp"/>

        <Button
            android:id="@+id/continuebtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_below="@+id/et_emailedittext"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/button_round"
            android:text="Continue"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            />
    </RelativeLayout>

</RelativeLayout>